<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.vbochkov.fireprotectrobotgamepad.MainActivity">

    <Button
        android:text="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rLeftBtn" />

    <Button
        android:text="Forw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rForwBtn"
        android:layout_above="@+id/rLeftBtn"
        android:layout_toEndOf="@+id/rLeftBtn" />

    <Button
        android:text="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rRightBtn"
        android:layout_below="@+id/rForwBtn"
        android:layout_toEndOf="@+id/rForwBtn" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rRightBtn"
        android:layout_toEndOf="@+id/rLeftBtn"
        android:id="@+id/rBackBtn" />

    <Button
        android:text="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rRightBtn"
        android:layout_toStartOf="@+id/gUpBtn"
        android:id="@+id/gLeftBtn" />

    <Button
        android:text="Down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gDownBtn"
        android:layout_below="@+id/gLeftBtn"
        android:layout_toEndOf="@+id/gLeftBtn" />

    <Button
        android:text="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gUpBtn"
        android:layout_toEndOf="@+id/gDownBtn"
        android:id="@+id/gRightBtn" />

    <Button
        android:text="Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="83dp"
        android:id="@+id/gUpBtn"
        android:layout_above="@+id/gLeftBtn"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Pump on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rBackBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/pumpBtn" />

    <Button
        android:text="AUTO_GUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gUpBtn"
        android:layout_alignStart="@+id/pumpBtn"
        android:id="@+id/autoGunBtn" />
</RelativeLayout>
